<!DOCTYPE html>
<html lang="es">
<head>
    <%-include('./partials/head') %>
</head>
<body>
    <%-include('./partials/header') %>

    <% for( let i=0; i<posts.length;i++ ) { %>
        <% if (idPost == posts[i].id) { %>
            <div class="container-blog">
                <h1><%=posts[i].title%></h1>
                <p>Publicado el : <%=posts[i].date%></p>
                
                <% for( let j=0; j< users.length; j++ ) { %>
                    <% if (posts[i].usuario_id == users[j].id) { %>
                        <p>autor : <%=users[j].nickname%></p>
                    <% } %>
                <% } %>
                
                <article class="contenido" id="contenido">
                    <p><%-marked((posts[i].content).toString())%></p>
                    <div id="content">
                        
                    </div>
                    
                </article>
            </div>
        <% } %>
    <% } %>

    <script>
        var contenido = document.getElementById('content');
        console.log(contenido);
    </script>
</body>
</html>